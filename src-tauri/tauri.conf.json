{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "twintaillauncher",
    "version": "1.1.8",
    "identifier": "twintaillauncher",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Twintail Launcher",
                "width": 1280,
                "height": 720,
                "minWidth": 1280,
                "minHeight": 720,
                "maximizable": true,
                "minimizable": true,
                "resizable": true,
                "dragDropEnabled": false,
                "incognito": true,
                "backgroundColor": "#0f172a"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["deb", "nsis"],
        "linux": {
            "deb": {
                "files": {
                    "/usr/share/applications/twintaillauncher.desktop": "../twintaillauncher.desktop"
                }
            },
            "rpm": {
                "desktopTemplate": "../twintaillauncher.desktop"
            }
        },
        "resources": [
            "./resources/hpatchz.exe",
            "./resources/hpatchz",
            "./resources/krpatchz.exe",
            "./resources/krpatchz",
            "./resources/7zr",
            "./resources/7zr.exe",
            "./resources/mangohud_default.conf",
            "./resources/hkrpg_patch.dll",
            "./resources/libs/steamclient.so"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
